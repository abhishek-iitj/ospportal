        <div class="row">
        <table border="1" cellpadding="7" cellspacing="7" align="center">
        <%
        var count=0;
        if(len1!=0 ){%>
                <tr>
                    <th>S. No</th>
                    <th>Company Name</th>
                    <th>Job Designation</th>
                    <!-- <th>Job Description</th> -->
                    <th>Status</th>
                </tr>
                <%
            data1.sort(function(a,b){
                return a.unq_id > b.unq_id ? 1 : -1;
            });
            if(len2!=0){
                data2.sort(function(a,b){
                    return a.uniq_id > b.uniq_id ? 1 : -1;
                });
            }
            var i = 0;
            var j = 0;
            var counter=0;
            var scpi = studentCpi;
            for(i= 0;i < data1.length;i++) {
                if(j==len2){
                    break;
                }
                var mcpi = data1[i].min_cpi;
                if(data1[i].unq_id==data2[j].uniq_id){ counter++;j++; %>
                    <tr>
                        <td>
                            <%=counter%>
                        </td>
                        <td>
                            <%=data1[i].company_name%>
                        </td>
                        <td>
                            <%=data1[i].job_desg%>
                        </td>
                        <!-- <td>
                            <%=data1[i].job_description%>
                        </td> -->
                        <td><a href="/student/viewOffer/<%=data1[i].unq_id %>/applied">Applied</a>
                        </td>
                    </tr>
                    <%}
                else if(mcpi<=scpi){counter++;count=2;%>
                        <tr>
                            <td>
                                <%=counter%>
                            </td>
                            <td>
                                <%=data1[i].company_name%>
                            </td>
                            <td>
                                <%=data1[i].job_desg%>
                            </td>
                            <!-- <td>
                                <%=data1[i].job_description%>
                            </td> -->
                            <td><a href="/student/viewOffer/<%= data1[i].unq_id %>/applyNow" style="color: green;">View Offer</a></td>
                        </tr>
                <%}
            } 
            for(var k= i;k < len1;k++){
                var mcpi = data1[k].min_cpi;
                if(mcpi<=scpi){counter++;count=2%>

                            <tr>
                                <td>
                                    <%=counter%>
                                </td>
                                <td>
                                    <%=data1[k].company_name%>
                                </td>
                                <td>
                                    <%=data1[k].job_desg%>
                                </td>
                                <!-- <td>
                                    <%=data1[k].job_description%>
                                </td> -->
                                <td><a href="/student/viewOffer/<%= data1[k].unq_id %>/applyNow" style="color: green;">View Offer</a></td>
                            </tr>

                <%}
            }%>
            
        <%}
        else{
            count=1;
            %>
             <tr>
                <td>
                <h3 align="center" style="color:red">No Offers Available for you</h3>
                </td>
