<div class="container card hoverable" style="height:90%;padding-top:10px;">
<br>
    <h2 align="center">Office of Students' Placement, IIT Jodhpur</h2>
    <hr>
    
    <div class="container" width: "100%" style="overflow: hidden;">
        <div class="col-lg-6" width: "40%" style="float: left;margin-left:10%; ">
            <form action="/student/register" method="POST">

                <div class="card-block">

                    <div class="text-center">
                        <h4><i class="fa fa-lock"></i> Student Registration</h4>
                        <p align="center" style="color: red;">
                            <%= status %>
                        </p>
                        <hr class="mt-2 mb-2">
                    </div>

                    <!--Body-->
                    <div class="md-form">
                        <i class="fa fa-user prefix"></i>
                        <input type="text" name="xname" id="form2" required class="form-control">
                        <label for="form2">Full Name</label>
                    </div>

                    <div class="md-form">
                        <i class="fa fa-envelope prefix"></i>
                        <input type="text" name="xuser" id="form2" required class="form-control">
                        <label for="form2">Roll Number</label>
                    </div>

                    <div class="md-form">
                        <i class="fa fa-lock prefix"></i>
                        <input type="password" id="form4" required name="xpass" class="form-control">
                        <label for="form4">Password</label>
                    </div>

                    <div class="md-form">
                        <i class="fa fa-lock prefix"></i>
                        <input type="password" id="form4" required name="cxpass" class="form-control">
                        <label for="form4">Confirm Password</label>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-primary" type="submit" name="register">Register</button>
                    </div>

                </div>
            </form>
        </div>    
