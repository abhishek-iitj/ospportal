<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="../../public/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="../../public/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="../../public/css/style.css" rel="stylesheet">
    <link rel="icon" href="../../public/img/iitj.png">
    <title>Office of Students' Placement, IIT Jodhpur</title>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style type="text/css">
        .row {
            margin-left: 0;
            margin-right: 0;
        }
        
        .container {
            .row {
                margin-left: -15px;
                margin-right: -15px;
            }
        }
    </style>
</head>

<body style="margin:0px auto ;">
    <h2 align="center">Office of Students' Placement, IIT Jodhpur</h2>
    <hr>
    <p align="center">
        <a class="btn btn-default" href="/admin/home">Home</a>
        <a class="btn btn-default" href="/admin/verifyResume">Verify Resume</a>
        <a class="btn btn-default" href="/admin/viewCredentials">Students Credentials</a>
        <a class="btn btn-default" href="/admin/viewCompany">View Companies</a>
        <a class="btn btn-default" href="/admin/logout">Logout</a>
        
    </p>
        <%var action1 = unqid+"/downloadZip"; %>
        <p align="center"><a class="btn btn-default" href= "<%=action1%>" >Download Zip</a></p>
        <p align="center"><b>Offer id : <%= unqid%></b></p>
        <p align="center"><b>Company Name : <%= data2[0].company_name%></b></p>
        <p align="center"><b>Job Designation : <%= data2[0].job_desg%></b></p>
        <p align="center"><b>Job Description : <%= data2[0].job_description%></b></p>
        <div class="row">

            <% if(data.length){%>
                <table border="1" cellpadding="7" cellspacing="7" align="center">
                    <tr>
                        <th>S. No.</th>
                        <th>Student Id</th>
                        <th>Resume</th>
                    </tr>
                    <%;
                    for(var i = 0;i < data.length;i++) { %>
                        <tr>
                            <td>
                                <%=(i+1)%>
                            </td>
                            <td>
                                <%=data[i].student_id%>
                            </td>
                            <td>
                                <%var action = "/admin/viewstudents/"+data[i].uniq_id+"/"+data[i].student_id+"/resume"+data[i].resume_selected ; %>
                                    <a class="btn btn-default" target="_blank" href="<%=action%>">Selected Resume</a></td>
                        </tr>

                        <% }%>
                </table>
                <%}
				else{ %>
                    <p align="right" style="text-align:center;margin:0px auto;">No student has applied for this offer</p>
                    <% } %>
        </div>
        <!-- SCRIPTS -->
        <!-- JQuery -->
        <script type="text/javascript" src="../../public/js/jquery-3.1.1.min.js"></script>
        <!-- Bootstrap tooltips -->
        <script type="text/javascript" src="../../public/js/tether.min.js"></script>
        <!-- Bootstrap core JavaScript -->
        <script type="text/javascript" src="../../public/js/bootstrap.min.js"></script>
        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="../../public/js/mdb.min.js"></script>
</body>

</html>