<html>
	<head>
		<meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	    <meta http-equiv="x-ua-compatible" content="ie=edge">
	    <!-- Font Awesome -->
	    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">
	    <!-- Bootstrap core CSS -->
	    <link href="../../public/css/bootstrap.min.css" rel="stylesheet">
	    <!-- Material Design Bootstrap -->
	    <link href="../../public/css/mdb.min.css" rel="stylesheet">
	    <!-- Your custom styles (optional) -->
	    <link href="../../public/css/style.css" rel="stylesheet">
		<title>Office of Students' Placement, IIT Jodhpur</title>
		<!--Let browser know website is optimized for mobile-->
		<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
		<style type="text/css">
			.row{
			    margin-left: 0;
			    margin-right: 0;
			}
			.container{
			    .row{
			        margin-left: -15px;
			        margin-right: -15px;
			    }
			}

		</style>
	</head>
	<body style="margin:0px auto;">
		<h2 align="center">Office of Students' Placement, IIT Jodhpur</h2>
		<hr>
		<h2 align="center">Welcome <%= adminName %></h2>
		<p align="center">
			<a class="btn btn-default" href="/admin/home">Home</a></p>
			<p align="center"><b>Registered Companies</b></p><br>
		<div class="row">
		
			<table border="1" cellpadding="7" cellspacing="7" align="center">
				<tr>
					<th width="50px">Sl. No.</th>
					<th>Company Name</th>
					<th>Type</th>
					<th>No. of Offers</th>
				</tr>
				<% if(data.length){ 
				for(var i = 0;i < data.length;i++) { %>
				<tr>
					<td><%=(i+1)%></td>
					<td><%=data[i].name%></td>
					<td><%=data[i].type%></td>
					<td><%=data[i].offerscount%></td>
					<td><a href="/admin/viewOffers/<%= data[i].unq_id %>">View Offers</a> &nbsp&nbsp&nbsp
					
					</tr>
					<% }
					}else{ %>
				<tr>
					<td colspan="3">No Companies registered at this time.</td>
					</tr>
				<% } %>
			</table>
		</div>

	    <!-- SCRIPTS -->
	    <!-- JQuery -->
	    <script type="text/javascript" src="../../public/js/jquery-3.1.1.min.js"></script>
	    <!-- Bootstrap tooltips -->
	    <script type="text/javascript" src="../../public/js/tether.min.js"></script>
	    <!-- Bootstrap core JavaScript -->
	    <script type="text/javascript" src="../../public/js/bootstrap.min.js"></script>
	    <!-- MDB core JavaScript -->
	    <script type="text/javascript" src="../../public/js/mdb.min.js"></script>
	</body>
</html>